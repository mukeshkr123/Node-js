doctype html
html(lang="en")
  head
    meta(charset="UTF-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    title Page Not Found
    style.
      /* Reset some default styles */
      * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
      }
      body {
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        margin: 0;
        padding: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        min-height: 100vh;
      }
      h1 {
        font-size: 3rem;
        color: #e74c3c;
        text-align: center;
        text-transform: uppercase;
        letter-spacing: 2px;
        margin-bottom: 20px;
      }
      nav {
        background-color: #333;
        padding: 10px 0;
        text-align: center;
      }
      nav a {
        text-decoration: none;
        color: #fff;
        font-weight: bold;
        font-size: 1.2rem;
        margin: 0 15px;
        transition: color 0.3s ease;
      }
      nav a:hover {
        color: #e74c3c;
      }
  body
    nav
      a(href="/") Shop
      a(href="/admin/add-product") Add Product
    h1 Page Not Found
